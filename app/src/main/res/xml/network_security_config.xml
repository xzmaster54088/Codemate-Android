<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration for all domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- System certificates -->
            <certificates src="system"/>
            <!-- User certificates (for debugging) -->
            <!-- <certificates src="user"/> -->
        </trust-anchors>
    </base-config>

    <!-- Development/Testing configuration -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
        <domain includeSubdomains="true">192.168.1.2</domain>
        <domain includeSubdomains="true">192.168.1.3</domain>
        <domain includeSubdomains="true">192.168.1.4</domain>
        <domain includeSubdomains="true">192.168.1.5</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.0.1</domain>
        <domain includeSubdomains="true">172.16.0.1</domain>
        <domain includeSubdomains="true">172.16.0.2</domain>
        <domain includeSubdomains="true">172.16.0.3</domain>
        <domain includeSubdomains="true">172.16.0.4</domain>
        <domain includeSubdomains="true">172.16.0.5</domain>
        
        <!-- Trust additional CAs -->
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
        
        <!-- Pin certificates for security -->
        <pin-set expiration="2025-12-31">
            <!-- Add certificate pins here for production -->
            <!-- Example: <pin digest="SHA-256">base64-encoded-challenge-string</pin> -->
        </pin-set>
    </domain-config>

    <!-- Production API configuration -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.codemate.com</domain>
        <domain includeSubdomains="true">cdn.codemate.com</domain>
        <domain includeSubdomains="true">auth.codemate.com</domain>
        <domain includeSubdomains="true">storage.codemate.com</domain>
        
        <!-- Production certificate pins -->
        <pin-set expiration="2025-12-31">
            <!-- Add production certificate pins -->
            <!-- <pin digest="SHA-256">base64-encoded-challenge-string</pin> -->
            <!-- Fallback pins -->
            <!-- <pin digest="SHA-256">fallback-certificate-pins</pin> -->
        </pin-set>
        
        <!-- Only trust system certificates for production -->
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>

    <!-- WebSocket configuration -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">ws.codemate.com</domain>
        <domain includeSubdomains="true">wss.codemate.com</domain>
        
        <!-- Trust system and user certificates for WebSocket -->
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>

    <!-- File system configuration -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">file://</domain>
        <domain includeSubdomains="true">content://</domain>
        
        <!-- Local file access -->
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>

    <!-- Debugging configuration for development builds -->
    <debug-overrides cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
        
        <!-- Disable certificate pinning in debug builds -->
        <pin-set cleartextTrafficPermitted="true"/>
    </debug-overrides>

    <!-- Content provider configuration -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">content://</domain>
        <domain includeSubdomains="true">file://</domain>
        <domain includeSubdomains="true">android.resource://</domain>
        <domain includeSubdomains="true">android://</domain>
        
        <!-- Trust system certificates for content providers -->
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>

    <!-- Backup and restore configuration -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">backup.codemate.com</domain>
        <domain includeSubdomains="true">restore.codemate.com</domain>
        
        <!-- Trust system and user certificates for backup -->
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>

    <!-- Analytics and crash reporting configuration -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">analytics.codemate.com</domain>
        <domain includeSubdomains="true">crash.codemate.com</domain>
        <domain includeSubdomains="true">metrics.codemate.com</domain>
        
        <!-- Only trust system certificates for analytics -->
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
        
        <!-- Certificate pinning for analytics -->
        <pin-set>
            <pin digest="SHA-256">analytics-certificate-pins</pin>
        </pin-set>
    </domain-config>
</network-security-config>